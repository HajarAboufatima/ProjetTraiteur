<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="projetTraiteurPU" transaction-type="JTA">
    <jta-data-source>java:app/jndi_traiteur</jta-data-source>
    <class>bean.CategorieEquipe</class>
    <class>bean.Client</class>
    <class>bean.Employe</class>
    <class>bean.EquipeEmploye</class>
    <class>bean.EquipeFete</class>
    <class>bean.Fete</class>
    <class>bean.Magasin</class>
    <class>bean.Paiement</class>
    <class>bean.PricingTable</class>
    <class>bean.Produit</class>
    <class>bean.ProduitFete</class>
    <class>bean.Salle</class>
    <class>bean.Stock</class>
    <class>bean.TypeTable</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
